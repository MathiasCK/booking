<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sms Melding"
        android:textSize="30sp"
        android:gravity="center_horizontal"></TextView>
    <TextView
        android:id="@+id/smsMelding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center_horizontal"></TextView>

    <EditText
        android:id="@+id/smsEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tidspunkt"
        android:textSize="30sp"
        android:gravity="center_horizontal"></TextView>
    <TextView
        android:id="@+id/tidspunktView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center_horizontal"></TextView>

    <EditText
        android:id="@+id/tidspunktEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <Button
        android:id="@+id/apply_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endre"
        android:layout_gravity="center_horizontal"></Button>
    <Switch
        android:id="@+id/switch1"
        android:text="Slå på sms"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></Switch>
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lagre endringer"
        android:layout_gravity="center_horizontal"></Button>
</LinearLayout>